<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#fffdfc"
        android:fontFamily="cursive" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUser"
        android:background="@drawable/main"
        android:backgroundTint="#fff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Username"
        android:drawablePadding="15dp"
        android:textColor="#181717"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp" />
    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main"
        android:backgroundTint="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#545454"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:layout_marginTop="10dp" />
    <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main"
                android:backgroundTint="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:hint="Email"
                android:inputType="textWebEmailAddress"
                android:textColor="#545454"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_email_black1_24dp"
                android:layout_marginTop="10dp" />
     <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPass"
        android:background="@drawable/main"
        android:backgroundTint="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Create Password"
        android:drawablePadding="15dp"
        android:textColor="#181717"
        android:inputType="textPassword"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCPass"
        android:background="@drawable/main"
        android:backgroundTint="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Re-enter Password"
        android:drawablePadding="15dp"
        android:textColor="#181717"
        android:inputType="textPassword"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_loop_black_24dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/editTextAddress"
        android:background="@drawable/main"
        android:backgroundTint="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Address"
        android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
        android:drawablePadding="15dp"
        android:textColor="#181717"
        android:inputType="textMultiLine"
        android:padding="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPin"
        android:background="@drawable/main"
        android:layout_below="@+id/icon"
        android:backgroundTint="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Pincode"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:drawablePadding="15dp"
        android:textColor="#181717"
        android:inputType="number"
        android:padding="10dp"

        />
    <Button
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:id="@+id/buttonNext"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/main"
        android:backgroundTint="#169cc1"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#161616"
        android:textSize="24sp"
        android:layout_marginBottom="60dp"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>